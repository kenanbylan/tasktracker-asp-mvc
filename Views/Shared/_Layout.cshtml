<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>


@*footer start*@
<div class="row">
    <div class="bg-dark-subtle border-top-2 border-bottom-2 shadow p-2 bg-body-tertiary rounded">
        <div class="container">
            <footer class="d-flex flex-wrap justify-content-between align-items-center px-2 py-3 my-4 border-top">
                <p class="col-md-4 mb-0 text-body-secondary">© 2023 Tasktrackr, Inc</p>

                <ul class="nav col-md-4 justify-content-center list-unstyled d-flex">
                    <li class="ms-3">
                        <a class="text-body-secondary" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-facebook" style="font-size: 1.5rem;"></i>
                        </a>
                    </li>
                    <li class="ms-3">
                        <a class="text-body-secondary" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-github" style="font-size: 1.5rem;"></i>
                        </a>
                    </li>
                    <li class="ms-3">
                        <a class="text-body-secondary" href="#">
                            <i class="bi bi-instagram" style="font-size: 1.5rem;"></i>
                        </a>
                    </li>
                </ul>

                <ul class="nav col-md-4 justify-content-end">
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Index" class="nav-link px-2 text-body-secondary">Home</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Index" class="nav-link px-2 text-body-secondary">Features</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Index" class="nav-link px-2 text-body-secondary">Pricing</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Index" class="nav-link px-2 text-body-secondary">FAQs</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Index" class="nav-link px-2 text-body-secondary">About</a>
                    </li>
                </ul>
            </footer>
        </div>
    </div>
</div>
